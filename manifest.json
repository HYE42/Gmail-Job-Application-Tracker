{
    "manifest_version":  3,
    "name":  "Gmail Job Application Tracker",
    "version":  "1.0.1",
    "description":  "Automatically track job applications from Gmail confirmation emails using AI (requires OAuth setup for development - see DEV_SETUP.md)",
    "permissions":  [
                        "identity",
                        "identity.email",
                        "storage",
                        "downloads"
                    ],
    "host_permissions":  [
                             "https://www.googleapis.com/*",
                             "https://api.openai.com/*",
                             "https://generativelanguage.googleapis.com/*",
                             "https://api.anthropic.com/*",
                             "https://api.deepseek.com/*"
                         ],
    "oauth2":  {
                   "scopes":  [
                                  "https://www.googleapis.com/auth/gmail.readonly"
                              ]
               },
    "action":  {
                   "default_popup":  "popup.html",
                   "default_icon":  {
                                        "16":  "icons/icon16.png",
                                        "48":  "icons/icon48.png",
                                        "128":  "icons/icon128.png"
                                    }
               },
    "background":  {
                       "service_worker":  "background.js"
                   },
    "icons":  {
                  "16":  "icons/icon16.png",
                  "48":  "icons/icon48.png",
                  "128":  "icons/icon128.png"
              }
}
